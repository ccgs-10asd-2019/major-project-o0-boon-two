<Page x:Class="wellbeingPage.Gym"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wellbeingPage"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"

      Title="Gym Section">

    <Page.Resources>
        <Style x:Key="buttonYellowStyle" TargetType="Button">
            <Setter Property="Background" Value="#1F1F1F" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="Foreground" Value="#FAD200"/>
            <Setter Property="FontSize" Value="24" />
        </Style>

        <Style x:Key="yellowTextbox" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="AllowDrop" Value="True"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="MaxLength" Value="580"/>
            <Setter Property="CharacterCasing" Value="Upper"/>

            <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>

        <Style x:Key="buttonWhiteStyle" TargetType="Button">
            <Setter Property="Background" Value="#1F1F1F" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="24" />
        </Style>
        <Style x:Key="rectangleYellowStyle" TargetType="Rectangle">
            <Setter Property="Fill" Value="#FFFAD200"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Width" Value="600"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="RadiusX" Value="25"/>
            <Setter Property="RadiusY" Value="25"/>
            <Setter Property="Margin" Value="30,30,0,0"/>
        </Style>

        <Style x:Key="textBlockListStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="55,-40,0,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="MaxWidth" Value="900"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

    </Page.Resources>

    <Grid>
        <Rectangle x:Name="BackgroundScreen" Fill="#FF1F1F1F" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <TextBlock Style="{StaticResource textBlockListStyle}" FontSize="36" Foreground="#FAD200" Margin="85,34,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="165" Height="50"> Workouts</TextBlock>

        <StackPanel x:Name="workoutsPanel" Margin="85,84,160,63" Background="LightGray" Orientation="Vertical"/>

        <Button x:Name="AddATaskButton" Style="{StaticResource Expand}" Margin="471,313,649,407" Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid Margin="7,8,0,0">
                        <Ellipse Fill="#FFFAD200" Width="Auto" Height="Auto"/>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Foreground="White" FontSize="64" FontWeight="Bold" Text="+" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="-4,-4,0,0" Height="Auto" Width="Auto" RenderTransformOrigin="0.665,0.381"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Page>
