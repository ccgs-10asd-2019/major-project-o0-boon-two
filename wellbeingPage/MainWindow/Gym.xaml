<Page x:Class="wellbeingPage.Gym"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wellbeingPage"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"

      Title="Gym Section">

    <Page.Resources>
        <Style x:Key="buttonYellowStyle" TargetType="Button">
            <Setter Property="Background" Value="#1F1F1F" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="Foreground" Value="#FAD200"/>
            <Setter Property="FontSize" Value="24" />
        </Style>

        <Style x:Key="yellowTextbox" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="AllowDrop" Value="True"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="MaxLength" Value="580"/>
            <Setter Property="CharacterCasing" Value="Upper"/>

            <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>

        <Style x:Key="buttonWhiteStyle" TargetType="Button">
            <Setter Property="Background" Value="#1F1F1F" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="24" />
        </Style>
        <Style x:Key="rectangleYellowStyle" TargetType="Rectangle">
            <Setter Property="Fill" Value="#FFFAD200"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Width" Value="600"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="RadiusX" Value="25"/>
            <Setter Property="RadiusY" Value="25"/>
            <Setter Property="Margin" Value="30,30,0,0"/>
        </Style>

        <Style x:Key="textBlockListStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="55,-40,0,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="MaxWidth" Value="900"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

    </Page.Resources>

    <Grid>
        <Rectangle x:Name="BackgroundScreen" Fill="#FF1F1F1F" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <TextBlock Style="{StaticResource textBlockListStyle}" FontSize="36" Foreground="#FAD200" Margin="85,34,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="50" Width="Auto"> Workouts</TextBlock>

        <Button x:Name="AddWorkout" Margin="1050, 650, 10, 70" Click="AddWorkout_Click">Add a new workout</Button>

        <StackPanel x:Name="workoutsPanel" Margin="85,84,0,63" Background="Black" Orientation="Vertical" HorizontalAlignment="Left" Width="955"/>

        <Grid x:Name="AddWorkoutPopup" Visibility="Collapsed">
            <Rectangle x:Name="DarknessScreen" Fill="#CC3C3C3C"/>

            <Border x:Name="AddATaskTopBorder" BorderThickness="1" CornerRadius="50,50,0,0" BorderBrush="#00000000" Background="#FFFAD200" Margin="100,101,127,0" Height="114" VerticalAlignment="Top">
                <TextBlock x:Name="AddATaskTextBlock" Text="New Workout" FontSize="72" FontFamily="Consolas" FontWeight="Bold" Margin="45,9,485,9" Foreground="White"/>
            </Border>

            <Border x:Name="AddATaskBottomBorder" BorderThickness="1" CornerRadius="0,0,50,50" BorderBrush="#00000000" Background="#FF1F1F1F" Margin="100,215,127,100">
                <Button Width="Auto" Height="Auto" Margin="693,309,51,57" Click="Button_Click">Add an Exercise</Button>
            </Border>
            <TextBlock Style="{StaticResource textBlockListStyle}" FontSize="36" Foreground="#FAD200" Margin="117,215,782,0" Width="Auto" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="47" Text="Current Workout"/>

            <StackPanel Background="White" Margin="100,262,444,100">

            </StackPanel>

        </Grid>

        <Grid x:Name="AddExercisePopup" Visibility="Visible">
            <Rectangle Fill="#CC3C3C3C"/>

            <Border x:Name="AddAnExerciseTopBorder" BorderThickness="1" CornerRadius="50,50,0,0" BorderBrush="#00000000" Background="#FFFAD200" Margin="0, 0, 0, 450" HorizontalAlignment="Center" Width="800" Height="100" VerticalAlignment="Center">
                <TextBlock x:Name="AddAnExerciseTextBlock" Text="Add Exercise" FontSize="72" FontFamily="Consolas" Width="485" FontWeight="Bold" Margin="20,9,20,24" Foreground="White" Height="70" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="0.805,0.171"/>
            </Border>

            <Border x:Name="AddAnExerciseBottomBorder" BorderThickness="1" CornerRadius="0,0,50,50" BorderBrush="#00000000" Background="#FF1F1F1F" Height="481" VerticalAlignment="Center" HorizontalAlignment="Center" Width="800" Margin="200,225,200,94">
                <StackPanel Margin="0,0,-1,-24">
                    <TextBlock  Margin="20" FontFamily="consolas" FontSize="45" Foreground="#FAD200">Exercise</TextBlock>
                    <TextBox Margin="250, -60, 200, 30" FontSize="32" CharacterCasing="Upper" ></TextBox>
                    <TextBlock  Margin="20" FontFamily="consolas" FontSize="45" Foreground="#FAD200">Sets</TextBlock>
                    <TextBox Margin="250, -60, 200, 30" FontSize="32" CharacterCasing="Upper" ></TextBox>
                    <TextBlock  Margin="20" FontFamily="consolas" FontSize="45" Foreground="#FAD200">Reps</TextBlock>
                    <TextBox Margin="250, -60, 200, 30" FontSize="32" CharacterCasing="Upper" ></TextBox>
                    <TextBlock  Margin="20" FontFamily="consolas" FontSize="45" Foreground="#FAD200">Rest</TextBlock>
                    <TextBox Margin="250, -60, 200, 30" FontSize="32" CharacterCasing="Upper" ></TextBox>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
