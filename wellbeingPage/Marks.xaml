<Page x:Class="wellbeingPage.Marks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wellbeingPage"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Marks">


    <Grid Background="#FF1F1F1F">
        <Rectangle x:Name="rectangle1_Copy" Fill="#FF191919" HorizontalAlignment="Right" Height="95" Stroke="#FF191919" VerticalAlignment="Top" Width="350" Margin="0,705,850,0"/>

        <Rectangle x:Name="rectangle1" Fill="#FF191919" HorizontalAlignment="Right" Height="120" Stroke="#FF191919" VerticalAlignment="Top" Width="1200"/>
        <Rectangle Fill="#FF282828" HorizontalAlignment="Left" Height="680" Margin="350,120,0,0" Stroke="#FF191919" VerticalAlignment="Top" Width="850"/>

        <Border x:Name="helpBorder" CornerRadius="15" BorderBrush="#FFFAD200" BorderThickness="7" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="200" Height="50" Margin="71,0,0,19">
            <Button x:Name="helpButton" Content="Input Marks" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="190" Background="#FFFAD200" BorderThickness="0" BorderBrush="#FFFAD200" FontFamily="Consolas" Foreground="Black" Height="40" FontSize="20" FontWeight="Bold"/>
        </Border>

        <Button x:Name="menuButton" Width="80" Height="80" Margin="0,20,1100,0" Foreground="{x:Null}" HorizontalAlignment="Right" VerticalAlignment="Top" BorderBrush="Black" Background="Black">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Ellipse Stroke="Black" StrokeThickness="1" Fill="#FFFAD200" Width="80" Height="80"/>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="6" Stroke="#00000000" VerticalAlignment="Top" Margin="22.5,25,0,0" Grid.Row="1" Width="35" RadiusX="3" RadiusY="3"/>
                        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="6" Stroke="#00000000" VerticalAlignment="Top" Margin="22.5,37,0,0" Grid.Row="1" Width="35" RadiusX="3" RadiusY="3"/>
                        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="6" Stroke="#00000000" VerticalAlignment="Top" Margin="22.5,49,0,0" Grid.Row="1" Width="35" RadiusX="3" RadiusY="3"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Label x:Name="wellbeingLabel" Content="Results" HorizontalAlignment="Left" Margin="381,10,0,0" VerticalAlignment="Top" Height="100" Width="380" FontFamily="Consolas" FontSize="72" FontWeight="Bold" Foreground="White" HorizontalContentAlignment="Center"/>
        <Label x:Name="nameLabel" Content="Advanced Software Development" HorizontalAlignment="Left" Margin="0,125,0,0" VerticalAlignment="Top" Height="111" Width="350" FontFamily="Consolas" FontSize="36" HorizontalContentAlignment="Center" Foreground="White"/>

        <Rectangle x:Name="opacityRectangle" Fill="#CC3C3C3C" HorizontalAlignment="Left" Height="800" Margin="0" Stroke="#FF191919" VerticalAlignment="Top" Width="0" Opacity="0.8"/>

        <Border x:Name="addPopupTop" BorderThickness="1" Grid.Row="0" Grid.ColumnSpan="2" CornerRadius="50,50,0,0" BorderBrush="#00000000" Background="#FF191919" HorizontalAlignment="Left" VerticalAlignment="Top" Width="0" Height="150" Margin="100,100,0,0"/>

        <Button x:Name="addCloseButton" Width="0" Height="80" Margin="0,120,110,0" Foreground="{x:Null}" HorizontalAlignment="Right" VerticalAlignment="Top" BorderBrush="Black" Background="Black"  RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="45"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Ellipse Stroke="Black" StrokeThickness="1" Fill="#FFFAD200" Width="80" Height="80"/>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Rectangle Fill="White" HorizontalAlignment="Left" Height="6" Stroke="#00000000" VerticalAlignment="Top" Margin="22.5,37,0,0" Grid.Row="1" Width="35" RadiusX="3" RadiusY="3"/>
                        <Rectangle Fill="White" HorizontalAlignment="Left" Height="35" Stroke="#00000000" VerticalAlignment="Top" Margin="37,22.5,0,0" Grid.Row="1" Width="6" RadiusX="3" RadiusY="3"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Border x:Name="infoPopupTop" BorderThickness="1" Grid.Row="0" Grid.ColumnSpan="2" CornerRadius="50,50,0,0" BorderBrush="#00000000" Background="#FF191919" HorizontalAlignment="Left" VerticalAlignment="Top" Width="0" Height="150" Margin="100,100,0,0"/>

        <Border x:Name="infoPopupBottom" BorderThickness="1" Grid.Row="0" Grid.ColumnSpan="2" CornerRadius="0,0,50,50" BorderBrush="#00000000" Background="#FF1F1F1F" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="0" Height="450" Margin="100,0,0,100"/>

        <Button x:Name="infoCloseButton" Width="0" Height="80" Margin="0,120,110,0" Foreground="{x:Null}" HorizontalAlignment="Right" VerticalAlignment="Top" BorderBrush="Black" Background="Black"  RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="45"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Ellipse Stroke="Black" StrokeThickness="1" Fill="#FFFAD200" Width="80" Height="80"/>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Rectangle Fill="White" HorizontalAlignment="Left" Height="6" Stroke="#00000000" VerticalAlignment="Top" Margin="22.5,37,0,0" Grid.Row="1" Width="35" RadiusX="3" RadiusY="3"/>
                        <Rectangle Fill="White" HorizontalAlignment="Left" Height="35" Stroke="#00000000" VerticalAlignment="Top" Margin="37,22.5,0,0" Grid.Row="1" Width="6" RadiusX="3" RadiusY="3"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <ScrollViewer Margin="0,125,850,95" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="stack">
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="132">Row 1</TextBlock>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="132">Row 2</TextBlock>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="132">Row 3</TextBlock>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="132">Row 4</TextBlock>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="132">Row 1</TextBlock>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="132">Row 2</TextBlock>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="132">Row 3</TextBlock>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="132">Row 4</TextBlock>
            </StackPanel>

        </ScrollViewer>


    </Grid>
</Page>
