<Page x:Class="wellbeingPage.Marks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wellbeingPage"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Marks">


    <Grid Background="#FF1F1F1F">

        <Rectangle x:Name="rectangle1" Fill="#FF191919" Height="120" Stroke="#FF191919" VerticalAlignment="Top" Width="1200"/>
        <Rectangle Fill="#FF282828" Margin="350,120,0,0" Stroke="#FF191919" Width="850"/>
        <Rectangle x:Name="rectangle1_Copy" Fill="#FF191919" HorizontalAlignment="Left" Height="94" Stroke="#FF191919" VerticalAlignment="Bottom" Width="355" Margin="-5,0,0,1"/>

        <Border x:Name="helpBorder" CornerRadius="15" BorderBrush="#FFFAD200" BorderThickness="7" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="200" Height="50" Margin="71,0,0,19">
            <Button x:Name="helpButton" Content="Input Marks" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="190" Background="#FFFAD200" BorderThickness="0" BorderBrush="#FFFAD200" FontFamily="Consolas" Foreground="Black" Height="40" FontSize="20" FontWeight="Bold"/>
        </Border>

        <Label x:Name="wellbeingLabel" Content="Results" HorizontalAlignment="Center" Margin="0,10,10,0" VerticalAlignment="Top" Height="100" Width="1190" FontFamily="Consolas" FontSize="72" FontWeight="Bold" Foreground="White" HorizontalContentAlignment="Center"/>

        <ScrollViewer Margin="0,120,0,95" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Width="350" VerticalAlignment="Bottom">
            <StackPanel Name="stack">
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="132"/>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="132"/>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="132"/>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="132"/>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="132"/>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="132"/>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="132"/>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="132"/>
            </StackPanel>

        </ScrollViewer>
        <Button x:Name="menuButton" Width="80" Height="80" Margin="24,20,0,0" Foreground="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="Black" Background="Black">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Ellipse Stroke="Black" StrokeThickness="1" Fill="#FFFAD200" Width="80" Height="80"/>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="6" Stroke="#00000000" VerticalAlignment="Top" Margin="22.5,25,0,0" Grid.Row="1" Width="35" RadiusX="3" RadiusY="3"/>
                        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="6" Stroke="#00000000" VerticalAlignment="Top" Margin="22.5,37,0,0" Grid.Row="1" Width="35" RadiusX="3" RadiusY="3"/>
                        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="6" Stroke="#00000000" VerticalAlignment="Top" Margin="22.5,49,0,0" Grid.Row="1" Width="35" RadiusX="3" RadiusY="3"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>


    </Grid>

</Page>
